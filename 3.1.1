#include <iostream>
#include <climits>

using namespace std;

int largestElement(int arr[], int n) {
    int largest = INT_MIN;

    for (int i = 0; i < n; i++) {
        largest = max(arr[i], largest);
    }

    return largest;
}

int main() {
    // Example usage
    int arr[] = {1, 4, 7, 2, 9};
    int n = sizeof(arr) / sizeof(arr[0]);

    int result = largestElement(arr, n);

    cout << "The largest element is: " << result << endl;

    return 0;
}
